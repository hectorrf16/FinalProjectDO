FROM jenkins/jenkins:latest
USER root
RUN apt-get update && apt-get install -y lsb-release
RUN curl -fsSLo /usr/share/keyrings/docker-archive-keyring.asc https://download.docker.com/linux/debian/gpg
RUN echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.asc] \
  https://download.docker.com/linux/debian $(lsb_release -cs) stable" > /etc/apt/sources.list.d/docker.list
RUN apt-get update && apt-get install -y docker-ce-cli
USER jenkins
# ENV JAVA_OPTS -Djenkins.install.runSetupWizard=false
# ENV CASC_JENKINS_CONFIG /var/jenkins_home/jenkins-configuration.yaml
ENV JAVA_ARGS="-Djava.net.preferIPv4Stack=true"
# COPY jenkins/plugins/plugins.txt /usr/share/jenkins/ref/plugins.txt
# COPY jenkins/jenkins-configuration.yaml /var/jenkins_home/jenkins-configuration.yaml
# COPY jenkins/seedjob.groovy /usr/local/seedjob.groovy
# RUN jenkins-plugin-cli --plugin-file /usr/share/jenkins/ref/plugins.txt
